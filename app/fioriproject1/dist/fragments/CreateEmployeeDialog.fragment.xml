<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateEMployeeDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Employee"
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Create"
                press="onCreateEmployee"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idEmployeeDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idFirstNameLabel12"
                    text="First Name"
                />
                <Input
                    id="idFirstNameInput12"
                    value="{localModel>/fname}"
                />
                <Label
                    id="idLastNameLabel12" 
                    text="Last Name"
                />
                <Input
                    id="idLastNameInput12"
                    value="{localModel>/lname}"
                />
                <Label
                    id="idAgeLabel12"
                    text="Age"
                />
                <Input
                    id="idAgeInput12"
                    value="{localModel>/age}"
                />
                <Label
                    id="idDOBLabel12"
                    text="DOB"
                />
                <Input
                    id="idDOBInput12"
                    value="{localModel>/dob}"
                />
                <Label
                    id="idGenderLabel12" 
                    text="Gender"
                />
                <Input
                    id="idGenderInput12"
                    value="{localModel>/gender}"
                />
                <Label
                    id="idEmailLabel12"
                    text="Email"
                />
                <Input
                    id="idEmailInput12"
                    value="{localModel>/email}"
                />
                <Label
                    id="idPhoneNumberLabel12"
                    text="Phone Number"
                />
                <Input
                    id="idPhoneNumberInput12"
                    value="{localModel>/phonenumber}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>