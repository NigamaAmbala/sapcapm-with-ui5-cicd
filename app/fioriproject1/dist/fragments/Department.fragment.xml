<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <form:SimpleForm
        id="idEmployeeDepartmentForm"
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        binding="{department}"
    >
        <Label
            id="idName1Label"
            text="Name"
        />
        <Text
            id="idName1Text"
            text="{name}"
        />
        <Label
            id="idDescriptionLabel"
            text="Description"
        />
        <Text
            id="idDescriptionText"
            text="{description}"
        />
        <Label
            id="idheadcountLabel"
            text="HeadCount"
        />
        <Text
            id="idheadcountText"
            text="{headCount}"
        />
    </form:SimpleForm>

</core:FragmentDefinition>