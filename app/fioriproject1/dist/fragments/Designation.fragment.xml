<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
<form:SimpleForm
        id="idDesignationForm"
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        binding="{designation}"
    >
        <Label
            id="idName2Label"
            text="Name"
        />
        <Text
            id="idName2Text"
            text="{name}"
        />
        <Label
            id="idDescription1Label"
            text="Description"
        />
        <Text
            id="idDescription1Text"
            text="{description}"
        />
        <Label
            id="idLevelLabel"
            text="Level"
        />
        <Text
            id="idLevelText"
            text="{level}"
        />
    </form:SimpleForm>
     
</core:FragmentDefinition>